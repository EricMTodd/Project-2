	</ul>



	<h2 class="listtitle">Gladiators List</h2>

	<% for(i = 0; i < slaves.length; i++) {%>
 
		<div class="gladiator">
			<h4><%=slaves[i].name%></h4>

			<form action="<%=slaves[i].id%>/purchase" method="POST">
				<button type='submit'>Purchase</button>
			</form>

		</div>

    <% } %>








	


	

	<main>
		<form action="/slaves" method="POST">
			<input type="text" name="name" placeholder="new slave name">
			<input type="submit">
		</form>
	</main>

</body>
</html>